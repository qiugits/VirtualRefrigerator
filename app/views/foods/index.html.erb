<link rel="stylesheet" type="text/css" href="application.css">

<%= link_to 'Close Regrige', user_path(@user) %>

<br>

<%= link_to 'New Food', new_user_food_path %>
  

<div class="status_frame">
  <div class="status">
    <h1><%= @user.name %>/h1>
    <div class="icon">
      <%= link_to image_tag('/Users/chr/Desktop/open_refrige.png'), user_path(@user) %>
    </div>
  </div>
  <br>
  <div class="container">
  <% if @user.foods.any? %>
      <h3>Foods (<%= @user.foods.count %>)</h3>
        <%= link_to 'New Food', new_user_food_path %>
      <ol class="foods">
        <%= render @foods %>
      </ol>
        <%= will_paginate @foods %>
    <% else %>
      <h3>Foods (Empty)</h3>
      <p>
      Let's store some foods! :)
      </p>
    <% end %>
  </div>
</div>