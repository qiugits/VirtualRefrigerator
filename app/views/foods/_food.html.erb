<div class="food-block" id="food-<%= food.id %>">
  <div class="food_image">
    <%= link_to image_tag('food_kinds/%04d.jpg' % food.kind_id, class: "food-img"), edit_food_path(food) %>

    <span class="amount">×<%= food.amount %></span>

    <span class="data"><%= food.created_at.strftime("%m/%d")%></span>
  </div>
  <span class="food"><%= truncate(food.foodname, length: 6, omission: "…") %></span>
  <%#= link_to 'Delete', food, method: :delete %>
</div>
