<!DOCTYPE html>
<html>
  <head>
    <title>Myapp</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag "https://www.gstatic.com/charts/loader.js" %>
  </head>

  <body>
    <div class="wrapper container flex-column bg-white">

      <!-- Header -->
      <div class="header flex-row flex-align-center bg-black">
        <% if logged_in? %>
          <%= link_to 'Home', root_path %>
          <%= link_to current_user.name, edit_user_path(current_user) %> |
          <%= link_to 'Log out', logout_path, method: 'delete' %>
        <% end %>
      </div>

      <!-- Flash -->
      <% flash.each do |message_type, message| %>
        <div class="alert alert-<%= message_type %>"><%= message %></div>
      <% end %>

      <!-- Main Content -->
      <div class="flex-content">
        <%= yield %>
      </div>

      <!-- Footer -->
      <div class="footer flex-row flex-justify-around flex-align-center bg-black">
        <% if logged_in? %>
          <%= link_to image_tag('icons/foods.svg', class: "footer-icon-btn", id: "icon-foods"), user_foods_path(current_user) %>
          <%= link_to image_tag('icons/plus.svg', class: "footer-icon-btn", id: "icon-plus"), new_user_food_path(current_user) %>
          <%= link_to image_tag('icons/stats.svg', class: "footer-icon-btn", id: "icon-stats"), user_path(current_user) %>
        <% end %>
      </div>

    </div>
  </body>
</html>
